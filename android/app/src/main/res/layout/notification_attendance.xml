<?xml version="1.0" encoding="utf-8"?>
<!--
    Attendance live notification layout.
    Uses @color/* so it resolves from values/ (light) or values-night/ (dark) automatically.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/notif_bg">

    <!-- Row 1: title + worked time badge -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/notif_text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing="0.01"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Live worked-time chip -->
        <TextView
            android:id="@+id/notification_worked_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notif_chip_bg"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/notif_chip_text"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Row 2: secondary info (started at · break · on-break status) -->
    <TextView
        android:id="@+id/notification_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/notif_text_secondary"
        android:textSize="11.5sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Progress bar (drawn as bitmap by AttendanceNotificationHelper) -->
    <ImageView
        android:id="@+id/notification_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:contentDescription="@null" />

    <!-- Action buttons row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        android:gravity="start">

        <TextView
            android:id="@+id/notification_btn_check_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/notification_pill_checkout"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/notification_action_check_out"
            android:textColor="@android:color/white"
            android:textSize="11.5sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/notification_btn_start_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/notification_pill_start_break"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/notification_action_start_break"
            android:textColor="@android:color/white"
            android:textSize="11.5sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/notification_btn_end_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notification_pill_end_break"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/notification_action_end_break"
            android:textColor="@android:color/white"
            android:textSize="11.5sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

    </LinearLayout>

</LinearLayout>
